    <script>
        function playVid(path, title) {
            const video = document.getElementById('castPlayer');
            const source = document.getElementById('castSource');
            const caption = document.getElementById('castTitle');

            source.src = path;
            caption.innerText = title;

            video.load();
            video.play().catch(e => console.log("User interaction required for playback."));
        }
    </script>
